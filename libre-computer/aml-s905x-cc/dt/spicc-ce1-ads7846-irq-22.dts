/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/gpio/meson-gxl-gpio.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/interrupt-controller/amlogic,meson-gxl-gpio-intc.h>

/ {
	compatible = "libretech,cc", "libretech,aml-s905x-cc-v2", "amlogic,s905x", "amlogic,meson-gxl";
	
	fragment@0 {
		target = <&spicc>;
		
		__overlay__ {

			touchscreen@0 {
				compatible = "ti,ads7846";
				reg = <0>;
				spi-max-frequency = <2000000>;
				interrupt-parent = <&gpio_intc>;
				interrupts = <IRQID_GPIOX_0 IRQ_TYPE_EDGE_FALLING>;
				pendown-gpio = <&gpio GPIOX_0 GPIO_ACTIVE_LOW>;
				ti,x-plate-ohms = /bits/ 16 <60>;
				ti,pressure-max = /bits/ 16 <255>;
				wakeup-source;
				status = "okay";
			};
		};
	};
};
